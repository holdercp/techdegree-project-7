ul.app--message--list
  li
    ul.app--message--conversation
      each message in messages
        li(class=(message.senderId === user.id) ? 'app--message--me' : 'app--message')
          .app--avatar(style=`background-image: url(${message.senderImg})`)
            img(src=message.senderImg)
          p.app--message--text= message.text
          p.app--message--timestamp= message.time
